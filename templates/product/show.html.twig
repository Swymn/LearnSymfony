{% extends 'base.html.twig' %}

{% block title %}
    Produit : {{ product.name }}
{% endblock %}

{% block body %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('app_home')}}">Home</a></li>
        <li class="breadcrumb-item"><a href="{{ path('product_category', {'slug': product.category.slug }) }}">{{ product.category.name }}</a></li>
        <li class="breadcrumb-item active">{{  product.name }}</li>
    </ol>
    <h1>{{ product.name }}</h1>

    <div class="row">
        <div class="col-4">
            <img class="img-fluid" src="{{ product.picture }}" alt="Image de {{ product.name }}">
        </div>
        <div class="col">
            <span class="badge bg-primary">
                {{ product.category.name}}
            </span>
            <p>
                ({{ (product.price / 100) | format_currency('EUR', locale='fr') }})
            </p>
            <p>{{ product.shortDescription }}</p>
            <a href="#" class="btn btn-outline-success">
                <i class="fas fa-shopping-cart"></i>
                Ajouter au panier
            </a>
        </div>
    </div>
{% endblock %}

