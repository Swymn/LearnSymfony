{% extends 'base.html.twig' %}

{% block title %}
    Administration
{% endblock %}

{% block body %}

    <h1>Création d'un Produit</h1>

    {{ form_start(formView) }}

    <div class="row">
        <div class="col">
            {{ form_row(formView.name) }}
            {{ form_row(formView.price) }}
            {{ form_row(formView.category) }}
        </div>
        <div class="col">
            {{ form_row(formView.picture) }}
            {{ form_row(formView.quantity) }}
            {{ form_row(formView.shortDescription) }}
        </div>
    </div>

    <button type="submit" class="btn btn-second mt-4">
        <i class="fas fa-save"></i>
        Créer le produit
    </button>

    {{ form_errors(formView)}}
    {{ form_end(formView) }}

{% endblock %}
